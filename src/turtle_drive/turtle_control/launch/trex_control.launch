<?xml version="1.0"?>
<launch>

    <rosparam command="load" file="$(find turtle_control)/config/trex_control.yaml" />

    <node name="base_controller_spawner" pkg="controller_manager" type="spawner" args="turtle_joint_publisher turtle_velocity_controller">
    <rosparam>
        odom_type: "imu"
    </rosparam>
    </node>

    <node name="turtle_control" pkg="turtle_control" type="turtle_base">
    <remap from "turtle_velocity_controller/cmd_vel" to "trex/turtle_velocity_controller/cmd_vel" />
    <remap from "turtle_velocity_controller/odom" to "trex/turtle_velocity_controller/odom" />
    <remap from "turtle_velocity_controller/parameter_descriptions" to "trex/turtle_velocity_controller/parameter_descriptions" />
    <remap from "turtle_velocity_controller/parameter_updates" to "trex/turtle_velocity_controller/parameter_updates" />
    <remap from "compiled_imu" to "trex/compiled_imu" />
    <remap from "corrimudata" to "trex/corrimudata" />
    <remap from "inspva" to "trex/inspva" />
    <remap from "insstdev" to "trex/insstdev" />
    <remap from "joint_states" to "trex/joint_states" />
    <remap from "tf" to "trex/tf" />
    </node>
    
    <node pkg="roboteq_driver" type="driver_node" name="roboteq_driver" output="screen">
    <rosparam>
    port: /dev/ttyACM0
    baud: 115200
    channels: [left, right]
    </rosparam>
    <remap from "left/cmd" to "trex/left/cmd" />
    <remap from "left/feedback" to "trex/left/feedback" />
    <remap from "right/cmd" to "trex/right/cmd" />
    <remap from "right/feedback" to "trex/right/feedback" />
    <remap from "roboteq_driver/status" to "trex/roboteq_driver/status" />
    </node>
</launch>
